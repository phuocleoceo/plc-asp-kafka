{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "SaslMechanism": "Plain",
    "SecurityProtocol": "SaslPlaintext",
    "SaslUsername": "admin",
    "SaslPassword": "admin-secret",
    "Producer": {
      "Acks": "All",
      "EnableIdempotence": true,
      "MaxInFlight": 5,
      "RetryBackoffMs": 100,
      "MessageSendMaxRetries": 2147483647,
      "CompressionType": "Gzip"
    },
    "Consumer": {
      "GroupId": "plc-group-id",
      "Timeout": 1000,
      "AutoOffsetReset": "Earliest",
      "EnableAutoOffsetStore": false
    },
    "Topics": {
      "Drink": {
        "Name": "plc-drinks",
        "Partitions": 3,
        "ReplicationFactor": 1,
        "ConsumerRetries": 2
      },
      "User": {
        "Name": "plc-users",
        "Partitions": 3,
        "ReplicationFactor": 1,
        "ConsumerRetries": 2
      }
    }
  }
}
